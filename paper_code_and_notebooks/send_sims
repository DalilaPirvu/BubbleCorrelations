#!/bin/bash
## Script for PI cluster symmetry:
#SBATCH --partition=debugq
#SBATCH --cpus-per-task=20
#SBATCH --exclusive
#SBATCH --time=1:00:00
#SBATCH --mem=180g
#SBATCH -J -

cd w
perl -i.bak -pe 's/nSims = 20250, minSim = 20000/nSims = 25250, minSim = 25000/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./ww
cd ww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 25500, minSim = 25250/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./www
cd www
