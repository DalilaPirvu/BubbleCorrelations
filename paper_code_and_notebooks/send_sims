sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwwwwwwwww
cd wwwwwwwwwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 29750, minSim = 29500/g' evolve-scalar.f90
sbatch batch
