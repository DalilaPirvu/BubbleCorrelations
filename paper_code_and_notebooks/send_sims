cd wwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 27000, minSim = 26750/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwww
cd wwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 27250, minSim = 27000/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwww
cd wwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 27500, minSim = 27250/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwww
cd wwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 27750, minSim = 27500/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwww
cd wwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 28000, minSim = 27750/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwww
cd wwwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 28250, minSim = 28000/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwwww
cd wwwwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 28500, minSim = 28250/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwwwww
cd wwwwwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 28750, minSim = 28500/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwwwwww
cd wwwwwwwwwwwwwwww
perl -i.bak -pe 's/nSims = 25250, minSim = 25000/nSims = 29000, minSim = 28750/g' evolve-scalar.f90
sbatch batch
cd ..

scp -r ./w ./wwwwwwwwwwwwwwwww
